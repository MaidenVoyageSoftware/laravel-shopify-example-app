        "prod": "npm run production",
        "production": "mix --production"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.19",
        "axios": "^1.6.4",
        "laravel-mix": "^6.0.49",
        "postcss": "^8.4.38",
        "tailwindcss": "^3.4.3",
        "vue-loader": "^16.8.3"
    },
    "dependencies": {
        "flowbite": "^2.3.0",
        "flowbite-vue": "^0.1.4",
        "vue": "^3.4.24",
        "vue-router": "^4.3.2"
    }
